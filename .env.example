# PostgreSQL Configuration
PGHOST=db
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=app
PGPORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost/app

# Auth Secret
SECRET_KEY=replace_with_secure_random_string_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# CORS settings
BACKEND_CORS_ORIGINS=["http://localhost:5000", "http://localhost:8080"]

# Twilio Configuration - Used for SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Fitbit API Configuration - Used for OAuth
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret

# Dropbox Configuration - Used for data export
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token
FITBIT_DATA_EXPORT_PATH=/fitbit_data
